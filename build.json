{
  "variables": {
    
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "us-east-1",
      "source_ami": "ami-00eb20669e0990cb4",
      "instance_type": "t2.micro",
      "ssh_username": "ec2-user",
      "ami_name": "apache-ami-packer-{{timestamp}}"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
	"sudo yum update -y",
	"sudo yum install java-1.8.0-openjdk.x86_64 -y",
	"sudo yum install wget unzip -y",
	"sudo wget http://apachemirror.wuchna.com/tomcat/tomcat-8/v8.5.50/bin/apache-tomcat-8.5.50.tar.gz",
	"sudo adduser openkm",
	"sudo tar -xvzf /home/openkm/apache-tomcat-8.5.50.tar.gz",
	"sleep 100",
	"sudo mv apache-tomcat-8.5.50 /home/openkm",
	"sudo chown -R openkm:openkm /home/openkm/apache-tomcat-8.5.50",
	"sudo rm /home/openkm/apache-tomcat-8.5.50/conf/tomcat-users.xml",
	"sudo rm /home/openkm/apache-tomcat-8.5.50/webapps/manager/META-INF/context.xml",
	"sudo cp tomcat-users.xml /home/openkm/apache-tomcat-8.5.50/conf/",
	"sudo cp context.xml /home/openkm/apache-tomcat-8.5.50/webapps/manager/META-INF/",
	"sudo cp /etc/init.d/tomcat .",
	"sudo chmod 755 /etc/init.d/tomcat",
	"sudo chkconfig --add tomcat",
	"sudo chkconfig tomcat on",
	"sudo service tomcat start"
      ]
    }
  ]
}
